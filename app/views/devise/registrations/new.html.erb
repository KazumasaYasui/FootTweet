<div class="signup_container">

  <h2>Sign up</h2>

  <div class="signup_box">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :ユーザーネーム %><br />
      <%= f.text_field :username, placeholder: "例）山田太郎" %>
    </div>

    <div class="field">
      <%= f.label :Eメール %><br />
      <%= f.email_field :email, placeholder: "例）yamada.tarou@email.com" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上で設定してください)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "6文字以上、半角英数字で入力してください" %>
    </div>

    <div class="field">
      <%= f.label :確認用パスワード %><br />
      <%= f.password_field :password_confirmation, placeholder: "6文字以上、半角英数字で入力してください" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>

</div>
