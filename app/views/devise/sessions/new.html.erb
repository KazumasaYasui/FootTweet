<div class="login_container">

  <h2>Log in</h2>


  <div class="login_box">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :ニックネーム %>
      <%= f.text_field :username, placeholder: "例）山田太郎" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <%= f.password_field :password, placeholder: "6文字以上、半角英数字で入力してください" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :アカウントを覚えさせる場合はチェック %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>

</div>
